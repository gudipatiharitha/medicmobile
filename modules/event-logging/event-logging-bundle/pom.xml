<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>motech</artifactId>
        <groupId>org.motechproject</groupId>
        <version>0.18.1-SNAPSHOT</version>
        <relativePath>../../../</relativePath>
    </parent>
    <groupId>org.motechproject</groupId>
    <artifactId>motech-event-logging-bundle</artifactId>
    <name>MOTECH Event Logging Bundle</name>
    <description>MOTECH Event Logging Bundle</description>
    <version>0.18.1-SNAPSHOT</version>
    <properties>
        <modules.root.dir>${basedir}/../../..</modules.root.dir>
    </properties>
    <packaging>bundle</packaging>
    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>motech-event-logging</artifactId>
            <version>${project.version}</version>
        </dependency>
        <!-- OSGI dependencies -->
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>com.springsource.javax.servlet</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>org.springframework.web.servlet</artifactId>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.3.4</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Export-Package>
                            org.motechproject.eventlogging.converter;version=${project.version},
                            org.motechproject.eventlogging.domain;version=${project.version},
                            org.motechproject.eventlogging.loggers;version=${project.version},
                            org.motechproject.eventlogging.repository;version=${project.version},
                            org.motechproject.eventlogging.service;version=${project.version}
                        </Export-Package>
                        <Import-Package>
                            org.ektorp.impl,
                            org.ektorp.spring,
                            org.ektorp.support,
                            org.motechproject.commons.couchdb.service,
                            org.motechproject.event,
                            org.motechproject.event.listener.annotations,
                            org.motechproject.server.config,
                            org.motechproject.server.config.service,
                            org.springframework.beans.factory.xml,
                            org.springframework.context.config,
                            *
                        </Import-Package>
                        <Private-Package>
                            org.motechproject.eventlogging.converter.impl,
                            org.motechproject.eventlogging.loggers.impl,
                            org.motechproject.eventlogging.service.impl
                        </Private-Package>
                        <Embed-Dependency>motech-event-logging;inline=true</Embed-Dependency>
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-osgi-dependencies</id>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <includeScope>runtime</includeScope>
                            <overWriteIfNewer>true</overWriteIfNewer>
                            <outputDirectory>
                                ${user.home}/.motech/bundles
                            </outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.5</version>
                <executions>
                    <execution>
                        <id>copy-bundles</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${user.home}/.motech/bundles</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>target</directory>
                                    <includes>
                                        <include>*.jar</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
